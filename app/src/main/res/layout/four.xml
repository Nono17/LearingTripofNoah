<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/guide_page4_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/guide_page4"
        android:scaleType="centerCrop"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />
    <TextView
        android:id="@+id/guide_page3_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="169dp"
        android:text="「参与健康课程」"
        android:textColor="#ff39cae6"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/guide_page4_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/guide_page3_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="每天学点健康知识，为健康护航"
        android:textColor="#ff1a1a1a"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guide_page3_tv1" />


    <Button
        android:id="@+id/start_btn"
        android:layout_width="122dp"
        android:layout_height="44dp"
        android:layout_marginBottom="56dp"
        android:background="@drawable/start_btn_shape"
        android:text="进入"
        android:textColor="#ffffffff"
        android:textSize="16sp"
        android:visibility="visible"
        android:shadowColor="#5c2cb9ec"
        android:shadowDx="0"
        android:shadowDy="13"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>