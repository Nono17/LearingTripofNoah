<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/guide_page2_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/guide_page2"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/guide_page2_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="169dp"
        android:text="「病友动态沟通」"
        android:textColor="#ff39cae6"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/guide_page2_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/guide_page2_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="病友朋友圈，分享治疗动态"
        android:textColor="#ff1a1a1a"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guide_page2_tv1" />
</android.support.constraint.ConstraintLayout>